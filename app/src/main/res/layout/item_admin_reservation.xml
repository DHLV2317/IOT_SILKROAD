<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_menu_24"
            android:tint="@android:color/darker_gray"
            android:background="#EFEFEF"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del tour"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/aSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente · 2 pax · S/ 0"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/aDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01 Ene 2025"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/aStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pendiente"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="12sp"
                android:background="@color/pill_gray" />

            <TextView
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/brand_celeste"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>