<?xml version="1.0" encoding="utf-8"?>
<!-- Redesigned Admin Home: modern dashboard with gradients, premium cards and visual metrics -->
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_primary"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            app:title="@string/dashboard_admin" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Hero Section with Gradient -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/gradient_primary"
                android:padding="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        style="@style/TextAppearance.SilkRoad.Headline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_admin"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/TextAppearance.SilkRoad.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Panel de Control"
                        android:textColor="@color/overlay_light"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_24"
                        android:padding="12dp"
                        android:contentDescription="@string/hero_logo_desc" />
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <!-- Metrics Cards Grid -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="-40dp">

                <!-- Row 1: Main Metrics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card.SilkRoad.Premium"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_24"
                                app:tint="@color/primary"
                                android:contentDescription="@string/label_reservations" />

                            <TextView
                                style="@style/TextAppearance.SilkRoad.DisplaySmall"
                                android:id="@+id/tReservationsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="128"
                                android:textColor="@color/primary"
                                android:layout_marginTop="8dp" />

                            <TextView
                                style="@style/TextAppearance.SilkRoad.Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_reservations"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card.SilkRoad.Premium"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/secondary"
                                android:contentDescription="@string/label_revenue" />

                            <TextView
                                style="@style/TextAppearance.SilkRoad.DisplaySmall"
                                android:id="@+id/tRevenue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12.4K"
                                android:textColor="@color/secondary"
                                android:layout_marginTop="8dp" />

                            <TextView
                                style="@style/TextAppearance.SilkRoad.Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_revenue"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Row 2: Secondary Metrics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:baselineAligned="false">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card.SilkRoad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="@color/success" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    style="@style/TextAppearance.SilkRoad.TitleLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45"
                                    android:textColor="@color/success" />

                                <TextView
                                    style="@style/TextAppearance.SilkRoad.Caption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tours Activos"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card.SilkRoad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="@color/info" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    style="@style/TextAppearance.SilkRoad.TitleLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12"
                                    android:textColor="@color/info" />

                                <TextView
                                    style="@style/TextAppearance.SilkRoad.Caption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Guías"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    style="@style/TextAppearance.SilkRoad.Headline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_actions"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Button.SilkRoad.Primary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/action_export"
                        app:icon="@drawable/baseline_arrow_circle_down_24"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Button.SilkRoad.Tonal"
                        android:layout_marginStart="12dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications"
                        app:icon="@drawable/bg_badge_notification"
                        app:iconGravity="textStart" />

                </LinearLayout>

                <!-- Recent Activity Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Card.SilkRoad.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.SilkRoad.TitleMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Actividad Reciente"
                            android:padding="16dp"
                            android:background="@color/surface_container" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                style="@style/TextAppearance.SilkRoad.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• Nueva reserva para Machu Picchu" />

                            <TextView
                                style="@style/TextAppearance.SilkRoad.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• Guía Juan actualizado"
                                android:layout_marginTop="8dp" />

                            <TextView
                                style="@style/TextAppearance.SilkRoad.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• 3 tours completados hoy"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
