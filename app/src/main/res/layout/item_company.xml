<?xml version="1.0" encoding="utf-8"?>
<!-- Redesigned company card: image hero, gradient overlay, rating stars, tour count and verified badge -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCompany"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_silkroad"
            android:contentDescription="@string/hero_logo_desc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/overlay_gradient_dark" />

        <!-- Verified badge -->
        <TextView
            android:id="@+id/badgeVerified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="top|end"
            android:padding="6dp"
            android:text="@string/verified"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/bg_badge_premium"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <!-- Rating stars -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/premium_gold"
                    android:contentDescription="@string/rating_desc" />
                <TextView
                    android:id="@+id/tRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp" />

                <!-- Dot separator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/continue_with"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <!-- Tours count -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_map"
                    app:tint="@color/white"
                    android:contentDescription="@string/duration_desc" />
                <TextView
                    android:id="@+id/tToursCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
