<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_person_24"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tName"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Admin" android:textStyle="bold"
                    android:textColor="@android:color/white" android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tEmail"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="admin@demo.com" android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditCompany"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Ver/editar datos de la empresa"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>