<?xml version="1.0" encoding="utf-8"?>
<!-- Redesigned Client Home: hero, search bar floating, departments carousel, pinterest-style grid of companies, recommended tours and quick actions -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_primary"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HERO -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/gradient_cool"
                android:padding="16dp"
                android:clipToPadding="false"
                android:clipToOutline="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextAppearance.SilkRoad.Headline2"
                        android:id="@+id/tvHello"
                        android:text="@string/hello_user"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/TextAppearance.SilkRoad.Body1"
                        android:id="@+id/tvSubHello"
                        android:text="@string/hello_sub"
                        android:textColor="@color/overlay_light"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_24"
                        android:contentDescription="@string/hero_logo_desc"
                        android:padding="8dp" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Floating search bar -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Card.SilkRoad.Premium"
                    android:id="@+id/searchCard"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:translationY="28dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/search_24px"
                            app:tint="@color/neutral_400"
                            android:contentDescription="@string/search_icon_desc" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/search_hint"
                            android:background="@null"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <!-- Quick actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card.SilkRoad.Premium"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="32dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_map"
                            android:padding="16dp"
                            android:contentDescription="@string/action_explore_desc" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        style="@style/TextAppearance.SilkRoad.Caption"
                        android:layout_marginTop="8dp"
                        android:text="@string/action_explore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card.SilkRoad.Premium"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="32dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_24"
                            android:padding="16dp"
                            android:contentDescription="@string/action_book_desc" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        style="@style/TextAppearance.SilkRoad.Caption"
                        android:layout_marginTop="8dp"
                        android:text="@string/action_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card.SilkRoad.Premium"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="32dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person_24"
                            android:padding="16dp"
                            android:contentDescription="@string/action_profile_desc" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        style="@style/TextAppearance.SilkRoad.Caption"
                        android:layout_marginTop="8dp"
                        android:text="@string/action_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <!-- Departments carousel -->
            <TextView
                style="@style/TextAppearance.SilkRoad.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/departments"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDepartments"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />

            <!-- Companies grid (Pinterest style) -->
            <TextView
                style="@style/TextAppearance.SilkRoad.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/companies"
                android:layout_marginTop="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCompanies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layoutAnimation="@anim/layout_animation_fall_down" />

            <!-- Recommended tours -->
            <TextView
                style="@style/TextAppearance.SilkRoad.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recommended_tours"
                android:layout_marginTop="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommendedTours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layoutAnimation="@anim/layout_animation_slide_right" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
