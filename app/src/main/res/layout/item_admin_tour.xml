<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Admin Tour Item: card-based with gradient accent and premium styling -->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Card.SilkRoad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left Accent Bar -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_primary" />

        <!-- Image with rounded corners -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/aImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder_image_warm"
                android:scaleType="centerCrop"
                android:contentDescription="Tour image" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                style="@style/TextAppearance.SilkRoad.TitleMedium"
                android:id="@+id/aTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del tour"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                style="@style/TextAppearance.SilkRoad.Body2"
                android:id="@+id/aSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Â· Personas"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/location_on_24px"
                    app:tint="@color/on_surface_variant"
                    android:contentDescription="Date" />

                <TextView
                    style="@style/TextAppearance.SilkRoad.Caption"
                    android:id="@+id/aDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            style="@style/Button.SilkRoad.Tonal"
            android:id="@+id/btnDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver"
            android:layout_marginEnd="12dp"
            app:icon="@drawable/ic_arrow_back_24"
            app:iconGravity="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>