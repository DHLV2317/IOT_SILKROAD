<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/brand_celeste"
            app:titleTextColor="@color/white" />

        <!-- Instructions Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📱 Finalizar Servicio"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/txtInstructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solicite al cliente mostrar su código QR de finalización y proceda a escanearlo para completar el tour."
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtCameraStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cámara: Verificando..."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- QR Scanner Simulation Area -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/qr_code_24"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_chip"
                    android:backgroundTint="@color/brand_celeste"
                    android:padding="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área de Escaneo QR"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En una implementación real, aquí aparecería la vista de la cámara"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSimulateQRScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📱 Simular Escaneo QR (Demo)"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@color/brand_celeste" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManualCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✋ Check-out Manual"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/brand_celeste" />

        </LinearLayout>

        <!-- Scan Result -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋 Resultado del Escaneo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@android:color/black"
                    android:backgroundTint="#F5F5F5"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txtScanResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esperando escaneo de código QR...\n\n"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textColor="@android:color/black" />

                </ScrollView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Backend Status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔄 Sincronización"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/txtBackendStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esperando finalización de tour..."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>